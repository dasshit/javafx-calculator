<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculator.CalculatorController">
   <Pane maxHeight="-Infinity" maxWidth="-Infinity"
         minHeight="-Infinity" minWidth="-Infinity"
         prefHeight="390.0" prefWidth="330.0"
         style="-fx-border-radius: 20; -fx-background-radius-fx-background-radius: 20;"
         xmlns="http://javafx.com/javafx/18"
         xmlns:fx="http://javafx.com/fxml/1"
   onKeyPressed="#onKeyPressed">
      <children>
         <GridPane gridLinesVisible="true"
                   layoutX="5.0" layoutY="66.0"
                   prefHeight="320.0" prefWidth="320.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="80.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="110.0" minWidth="10.0" prefWidth="80.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="94.0" minWidth="0.0" prefWidth="80.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="80.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
            <children>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="1"
                       GridPane.columnIndex="0" GridPane.rowIndex="0"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="2"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="3"
                       GridPane.columnIndex="2" GridPane.rowIndex="0"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="C"
                       GridPane.columnIndex="3" GridPane.rowIndex="0"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="4"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="5"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="6"
                       GridPane.columnIndex="2" GridPane.rowIndex="1"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="+"
                       GridPane.columnIndex="3" GridPane.rowIndex="1"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="7"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="8"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="9"
                       GridPane.columnIndex="2" GridPane.rowIndex="2"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="-"
                       GridPane.columnIndex="3" GridPane.rowIndex="2"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="0"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"
                       onMouseClicked="#onNumberButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="="
                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="/"
                       GridPane.columnIndex="2" GridPane.rowIndex="3"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
               <Button mnemonicParsing="false" prefHeight="80.0" prefWidth="80.0" text="*"
                       GridPane.columnIndex="3" GridPane.rowIndex="3"
                       onMouseClicked="#onOperationButtonClick">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Button>
            </children>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </GridPane>
         <TextField layoutX="5.0" layoutY="7.0"
                    prefHeight="54.0" prefWidth="320.0"
                    fx:id="currentInput"
                    editable="true">
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <font>
               <Font size="28.0" />
            </font>
         </TextField>
      </children>
   </Pane>
</VBox>